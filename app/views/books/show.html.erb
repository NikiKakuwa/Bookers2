<div class="profile-container">
	User info
    <h3 class="profile-name"><%= @a_book.user.name %></h3>
    <%= attachment_image_tag @a_book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "" %>
    <%= @a_book.user.introduction %>
     <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>

New book
<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <h3>
    <% @book.errors.count %>errors prohibited this book from being saved:
    </h3>

	<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>


Book detail
<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= link_to user_path(@a_book) do %>
                <%= attachment_image_tag @a_book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "" %>
                <% end %>
                <%= link_to @a_book.user.name, user_path(@a_book.user) %>
                </td>
            <td><%= link_to @a_book.title, book_path(@a_book) %></td>
            <td><%= @a_book.body %></td>
        </tr>
    </tbody>
</table>

<% if @a_book.user_id == current_user.id %>
<%= link_to "Edit", edit_book_path(@a_book) %>

<%= link_to "Destroy", book_path(@a_book), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>