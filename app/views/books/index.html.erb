
<%= flash[:success] %>



<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "" %>
　　 <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>

<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <h3>
    <% @book.errors.count %>errors prohibited this book from being saved:
    </h3>

	<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

<h1>books</h1>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %> <%# ここに書いてあるのはhasmanyのbooksであって、メソッドではない %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "" %></td>
			<td><%= link_to book.title, book_path(book) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>