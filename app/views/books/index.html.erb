
<div class="container">
<div class="row">
	<div class="col-xs-3">
	<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
    	<tr></tr>
    	<tr>
    		<th>name</th>
    		<th><%= @user.name %></th>
    	</tr>
    	<tr>
    		<th>introduction</th>
    		<th><%= @user.introduction %></th>
    	</tr>
    </table>

    <div class="row">
    <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user) do %>
        <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
        <% end %>
    <% end %>
    </div>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <h3>
    <% @book.errors.count %>errors prohibited this book from being saved:
    </h3>

	<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' , class: "btn btn-primary col-xs-12" %>

    <% end %>

    </div>

    <div class="col-xs-9">

<h2>Books</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th>Comments</th>
			<th>Likes</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= link_to user_path(book.user) do %>
				<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
				<% end %>
				</td>
			<td><%= link_to book.title, book_path(book) %></td>
			<td><%= book.body %></td>
			<td>
			<%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %>
			</td>
			<td>
			<% if book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(book), method: :delete do %>
                <%# <i class="fa fas-heart" aria-hidden="true" style="color: red;"></i> %>
                <%= fa_icon "heart", :style=>"color:red;" %>
                <% end %>
            <% else %>
                <%= link_to book_favorites_path(book), method: :post do %>
                <%# <i class="fa far-heart></i> %>
                <%= fa_icon "heart-o", :style=>"color:red;" %>
                <% end %>
            <% end %>
			<h6><%= book.favorites.count %>件お気に入り</h6>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>