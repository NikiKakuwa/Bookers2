

<div class="profile-container">
    <h3 class="profile-name"><%= @a_user.name %></h3>
    <%= attachment_image_tag @a_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "" %>
    <%= @a_user.introduction %>
　　 <% if @a_user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@a_user), class: "pull-right" %></p>
    <% end %>
</div>

<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <h3>
    <% @book.errors.count %>errors prohibited this book from being saved:
    </h3>

	<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

<h4>books</h4>

<%= flash[:success] %>

<h1>books</h1>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @mybooks.each do |book| %>
		<tr>
			<td><%= attachment_image_tag @a_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

