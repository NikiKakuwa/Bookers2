
<div class="container">
<div class="row">
	<div class="col-xs-3">
	<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
    	<tr></tr>
    	<tr>
    		<th>name</th>
    		<th><%= @user.name %></th>
    	</tr>
    	<tr>
    		<th>introduction</th>
    		<th><%= @user.introduction %></th>
    	</tr>
    </table>

    <div class="row">
    <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user) do %>
        <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
        <% end %>
    <% end %>
    </div>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <h3>
    <% @book.errors.count %>errors prohibited this book from being saved:
    </h3>

	<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' , class: "btn btn-primary col-xs-12" %>

    <% end %>

    </div>

    <div class="col-xs-9">

<h2>Users</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
				</td>
			<td><%= user.name %></td>
			<td><%= link_to "Show", user_path(user) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>